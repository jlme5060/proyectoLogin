<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShoeStore Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Background="Black">
    <Grid>
        <!-- Fondo con imagen -->
        <Grid.Background>
            <ImageBrush ImageSource="Assets/photo-1633464129147-777bdcc97c1d.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <!-- Superposición semitransparente -->
        <Rectangle Fill="#AA000000" />

        <!-- Contenido principal -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- Título -->
            <TextBlock Text="Bienvenido a zapasfree" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20" />

            <!-- Campo de usuario -->
            <TextBlock Text="Usuario" 
                       Foreground="White" 
                       FontSize="14" 
                       Margin="0,0,0,5" />
            <TextBox x:Name="UsernameTextBox" 
                     Width="250" 
                     Height="30" 
                     Background="#FF444444" 
                     Foreground="White" 
                     BorderBrush="#FF888888" 
                     Padding="5" />

            <!-- Campo de contraseña -->
            <TextBlock Text="Contraseña" 
                       Foreground="White" 
                       FontSize="14" 
                       Margin="0,10,0,5" />
            <PasswordBox x:Name="PasswordBox" 
                         Width="250" 
                         Height="30" 
                         Background="#FF444444" 
                         Foreground="White" 
                         BorderBrush="#FF888888" 
                         Padding="5" />

            <!-- Botón de iniciar sesión -->
            <Button Content="Iniciar sesión" 
                    Width="250" 
                    Height="40" 
                    Background="#FF00AAFF" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Margin="0,20,0,0" 
                    BorderThickness="0"
                    Cursor="Hand" />

            <!-- Enlace para registrarse -->
            <TextBlock Text="¿No tienes una cuenta? Regístrate aquí." 
                       Foreground="White" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0" 
                       TextDecorations="Underline" 
                       Cursor="Hand" />
        </StackPanel>
    </Grid>
</Window>